<%- include ('partials/header'); %>

<body>
    <%- include ('partials/navbar'); %>

    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/pergunta" class="btn btn-primary"> Perguntar</a>
        <hr>
    <% perguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <div class="card-header">
                <p> <%= pergunta.titulo %> </p>
            </div>
            <div class="card-body">
             <a href="/pergunta/<%= pergunta.id %>">
                <button class="btn btn-primary">
                    Responder
                </button>
            </a> 

            </div>
        </div>
        <!-- <p> >> <%= pergunta.descricacao %> </p> -->
   <% })%>

</div>
    
</body>


<%- include ('partials/footer'); %>
